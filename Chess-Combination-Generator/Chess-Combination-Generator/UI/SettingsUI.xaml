<UserControl x:Class="Chess_Combination_Generator.UI.SettingsUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Chess_Combination_Generator.UI"
            mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel>
            <Label Content="Settings path:" Margin="5"/>

            <Label Content="Language" Margin="5"/>
            <ComboBox Margin="5"/>
            <Label Content="Black color" Margin="5"/>
            <Label Background="Black" Margin="5"/>
            <Label Content="White color" Margin="5"/>
            <Label Background="White" Margin="5"/>

            <Button Height="30" Content="Save settings" Margin="5" IsEnabled="false"/>
        </StackPanel>
    </Grid>
</UserControl>
