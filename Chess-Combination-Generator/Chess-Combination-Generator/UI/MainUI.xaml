<Window x:Class="Chess_Combination_Generator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chess_Combination_Generator"
        xmlns:UI="clr-namespace:Chess_Combination_Generator.UI"
        mc:Ignorable="d"
        Title="Chess Combination Generator" Height="600" Width="800" WindowStartupLocation="CenterScreen">
    <Grid x:Name="main_grid" Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <TabControl>
            <TabItem Header="Generator">
                <UI:GeneratorUI/>
            </TabItem>
            <TabItem Header="Viewer">
                <UI:ViewerUI/>
            </TabItem>
            <TabItem Header="Settings">
                <UI:SettingsUI/>
            </TabItem>
        </TabControl>
        <Grid Grid.Row="1" >
            <ProgressBar x:Name="generationProcess_pbar" Margin="2" />
            <TextBlock x:Name="generazionProcess_tblock" Text="100/10" TextAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>
